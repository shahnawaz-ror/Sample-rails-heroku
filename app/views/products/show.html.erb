<div class="container">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Sort:</strong>
    <%= @product.sort %>
  </p>
</div>
<div class="container">
  <h3>Descriptions</h3>
  <% @product.tasks.each_with_index do |task, index| %>
      <br />Task Number<%= index + 1 %>
      <h4>Comment:</h4><%= task.description %><br />
      <h4>Status:</h4><%= task.done %>
  <% end %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
